--=====================================================
-- 玩家功能菜单内容
local function createPlayerFeaturesContent(container)
    if not container or not container:IsDescendantOf(game) then return function() end end

    -- 移动速度设置（无说明标签，直接交互）
    local speedFrame = Instance.new("Frame")
    speedFrame.Size = UDim2.new(1, 0, 0, 40 * UI_STATE.scale)
    speedFrame.LayoutOrder = 1
    speedFrame.BackgroundTransparency = 1
    speedFrame.Parent = container

    createLabel(speedFrame, {
        name = "SpeedLabel",
        size = UDim2.new(0.4, 0, 1, 0),
        text = "移动速度:",
        textSize = 14,
        xAlign = Enum.TextXAlignment.Right,
        position = UDim2.new(0, 0, 0, 0)
    })

    local speedInput = Instance.new("TextBox")
    speedInput.Name = "SpeedInput"
    speedInput.Size = UDim2.new(0.5, 0, 1, -6 * UI_STATE.scale)
    speedInput.Position = UDim2.new(0.45, 0, 0, 3 * UI_STATE.scale)
    speedInput.PlaceholderText = "输入数值"
    speedInput.TextSize = 14 * UI_STATE.scale
    speedInput.BackgroundColor3 = CONFIG.UI_COLORS.secondary
    speedInput.TextColor3 = Color3.new(1, 1, 1)
    speedInput.Parent = speedFrame
    createCorner(speedInput, 6)
    speedInput.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local value = tonumber(speedInput.Text)
            if value then
                local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.WalkSpeed = value
                    showNotification("设置成功", "移动速度已设置为" .. value)
                end
            end
        end
    end)

    -- 跳跃高度设置
    local jumpFrame = Instance.new("Frame")
    jumpFrame.Size = UDim2.new(1, 0, 0, 40 * UI_STATE.scale)
    jumpFrame.LayoutOrder = 2
    jumpFrame.BackgroundTransparency = 1
    jumpFrame.Parent = container

    createLabel(jumpFrame, {
        name = "JumpLabel",
        size = UDim2.new(0.4, 0, 1, 0),
        text = "跳跃高度:",
        textSize = 14,
        xAlign = Enum.TextXAlignment.Right,
        position = UDim2.new(0, 0, 0, 0)
    })

    local jumpInput = Instance.new("TextBox")
    jumpInput.Name = "JumpInput"
    jumpInput.Size = UDim2.new(0.5, 0, 1, -6 * UI_STATE.scale)
    jumpInput.Position = UDim2.new(0.45, 0, 0, 3 * UI_STATE.scale)
    jumpInput.PlaceholderText = "输入数值"
    jumpInput.TextSize = 14 * UI_STATE.scale
    jumpInput.BackgroundColor3 = CONFIG.UI_COLORS.secondary
    jumpInput.TextColor3 = Color3.new(1, 1, 1)
    jumpInput.Parent = jumpFrame
    createCorner(jumpInput, 6)
    jumpInput.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local value = tonumber(jumpInput.Text)
            if value then
                local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.JumpPower = value
                    showNotification("设置成功", "跳跃高度已设置为" .. value)
                end
            end
        end
    end)

    -- 重力设置
    local gravityFrame = Instance.new("Frame")
    gravityFrame.Size = UDim2.new(1, 0, 0, 40 * UI_STATE.scale)
    gravityFrame.LayoutOrder = 3
    gravityFrame.BackgroundTransparency = 1
    gravityFrame.Parent = container

    createLabel(gravityFrame, {
        name = "GravityLabel",
        size = UDim2.new(0.4, 0, 1, 0),
        text = "重力设置:",
        textSize = 14,
        xAlign = Enum.TextXAlignment.Right,
        position = UDim2.new(0, 0, 0, 0)
    })

    local gravityInput = Instance.new("TextBox")
    gravityInput.Name = "GravityInput"
    gravityInput.Size = UDim2.new(0.5, 0, 1, -6 * UI_STATE.scale)
    gravityInput.Position = UDim2.new(0.45, 0, 0, 3 * UI_STATE.scale)
    gravityInput.PlaceholderText = "输入数值"
    gravityInput.TextSize = 14 * UI_STATE.scale
    gravityInput.BackgroundColor3 = CONFIG.UI_COLORS.secondary
    gravityInput.TextColor3 = Color3.new(1, 1, 1)
    gravityInput.Parent = gravityFrame
    createCorner(gravityInput, 6)
    gravityInput.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local value = tonumber(gravityInput.Text)
            if value then
                game.Workspace.Gravity = value
                showNotification("设置成功", "重力已设置为" .. value)
            end
        end
    end)

    -- 功能按钮数据（含说明）
    local buttons = {
        {
            name = "甩飞+防甩飞", 
            url = "https://raw.githubusercontent.com/DiosDi/VexonHub/refs/heads/main/VexonHub",
            desc = "功能说明：\n- 双重功能：既能甩飞对手也能防止被甩飞\n- 内置自动连招系统，无需手动操作\n- 适配多数战斗场景，稳定性强\n- 作者实测推荐，兼容性高"
        },
        {
            name = "飞行v3", 
            url = "https://pastebin.com/raw/LY9W7CPL",
            desc = "功能说明：\n- 第三代飞行系统，优化操控体验\n- 支持高度调节和速度控制\n- 抗干扰模式，减少场景冲突\n- 兼容绝大多数游戏地图"
        },
        {
            name = "踏空", 
            url = "https://raw.githubusercontent.com/GhostPlayer352/Test4/main/Float",
            desc = "功能说明：\n- 实现空中悬浮效果，无需落地\n- 可自由移动，操作简单\n- 低延迟响应，适合探索场景\n- 轻量化设计，不影响其他功能"
        },
        {
            name = "防挂机", 
            url = "https://pastebin.com/raw/ns9JeMpW",
            desc = "功能说明：\n- 自动模拟玩家操作，避免被系统判定为挂机\n- 低频率动作，不影响正常游戏\n- 适用于需要长时间在线的场景\n- 隐蔽性强，不易被检测"
        },
        {
            name = "透视", 
            func = function()
                local FillColor = Color3.fromRGB(175,25,255)
                local DepthMode = "AlwaysOnTop"
                local FillTransparency = 0.5
                local OutlineColor = Color3.fromRGB(255,255,255)
                local OutlineTransparency = 0
                local CoreGui = game:FindService("CoreGui")
                local Players = game:FindService("Players")
                local lp = Players.LocalPlayer
                local connections = {}
                local Storage = Instance.new("Folder")
                Storage.Parent = CoreGui
                Storage.Name = "Highlight_Storage"
                
                local function Highlight(plr)
                    local Highlight = Instance.new("Highlight")
                    Highlight.Name = plr.Name
                    Highlight.FillColor = FillColor
                    Highlight.DepthMode = DepthMode
                    Highlight.FillTransparency = FillTransparency
                    Highlight.OutlineColor = OutlineColor
                    Highlight.OutlineTransparency = 0
                    Highlight.Parent = Storage
                    
                    local plrchar = plr.Character
                    if plrchar then
                        Highlight.Adornee = plrchar
                    end
                    connections[plr] = plr.CharacterAdded:Connect(function(char)
                        Highlight.Adornee = char
                    end)
                end
                
                Players.PlayerAdded:Connect(Highlight)
                for i,v in next, Players:GetPlayers() do
                    Highlight(v)
                end
                Players.PlayerRemoving:Connect(function(plr)
                    local plrname = plr.Name
                    if Storage[plrname] then
                        Storage[plrname]:Destroy()
                    end
                    if connections[plr] then
                        connections[plr]:Disconnect()
                    end
                end)
            end,
            desc = "功能说明：\n- 显示其他玩家轮廓，穿透障碍物可见\n- 自定义颜色：紫色填充+白色边框\n- 自动追踪新加入玩家\n- 退出时自动清理，无残留"
        }
    }

    -- 创建功能按钮
    for i, btn in ipairs(buttons) do
        createButton(container, {
            name = "PlayerFuncBtn_" .. i,
            layoutOrder = i + 3,  -- 排在3个输入框后面
            size = UDim2.new(1, 0, 0, 40 * UI_STATE.scale),
            text = btn.name,
            bgColor = CONFIG.UI_COLORS.primary,
            hoverColor = Color3.fromRGB(70, 70, 120),
            onClick = function()
                createExecutionDialog(
                    "执行 " .. btn.name,
                    btn.desc,
                    function()
                        if btn.url then
                            loadstring(game:HttpGet(btn.url))()
                        else
                            btn.func()
                        end
                        showNotification("功能已激活", btn.name .. "已执行")
                    end
                )
            end
        })
    end

    return function() end
end
